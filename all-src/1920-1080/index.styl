$height = 1080px
$width = 1920px
$tableFontSize = 30px
$color = white
$logoHeight = 80px

// $color = #B7E2FF
body
  color $color

.container
  height $height
  width $width
  background black

#person_auth
  position absolute
  top 0px
  left 0px
  width 1200px
  height $height
  margin-top $logoHeight

$tableLeft = 1200px

#cause_table
  position absolute
  left $tableLeft
  width sum($width - $tableLeft - 10px)
  height 600px
  color $color
  font-size $tableFontSize
  display inline-block
  padding 30px 5px
  margin-top $logoHeight

#total_table
  position absolute
  left $tableLeft
  width sum($width - $tableLeft - 10px)
  height 100px
  color $color
  font-size $tableFontSize
  display inline-block
  padding 10px 5px
  top 880px
  margin-top 20px

.table-class table
  width 100%
  // font-size $tableFontSize

.table-class table td
  text-align center
  border 1px solid #069

.table-class table th
  text-align center
  border 1px solid #069

$imgWidth = 70px

.logo-box
  display inline-flex
  align-items center
  justify-content space-between
  padding 10px
  width $width - 30px

.logo-box img
  width $imgWidth
  height $imgWidth

.text-box
  align-self center
  display flex
  flex-direction column
  align-items center
  padding-left 165px

.text-box p
  margin 0
  font-size $tableFontSize
  padding-left 10px

.text-box p:first-child
  margin-bottom 5px

#nowTime
  font-size 30px
  align-self flex-end

